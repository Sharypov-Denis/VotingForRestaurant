    <import resource="spring-mvc.xml"/>
    <import resource="spring-db.xml"/>
    <import resource="spring-security.xml"/>
    <context:component-scan base-package="den.graduation.**.web"/>
    <context:component-scan base-package="den.graduation.**.service"/>
    <context:component-scan base-package="den.graduation.**.util"/>
</beans>